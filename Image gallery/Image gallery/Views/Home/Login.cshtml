<!DOCTYPE HTML>
<html lang="en">
@{
	ViewData["Title"] = "Login";
}

<body>
	<div class="container mt-5">
		<div class="justify-content-center">
			<div class="col-md-6">
				<div class="card">
					<h5 class="card-header text-center">Login</h5>
					<div class="card-body">
						<form asp-controller="Home" asp-action="LoginCheck" method="post">
							<div class="mb-3">
								<label for="Username" class=form-label></label>
								<input type="text" name="Name" class="form-control" />
							</div>
							<div class="mb-3">
								<input type="text" name="Password" class="form-control" />
								<label for="Password" class="form-label"></label>
							</div>
							<div class="d-grid">
								<button type="submit" class="btn btn-primary">Login</button>
							</div>
						</form>
					</div>
					<div class="card-footer text-center">
						<button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#CreateAccount">Create Account</button>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="modal fade" id="CreateAccount">
		<div class="modal-dialog">
			<div class="modal-header justify-content-center">
				Add Subject
			</div>
		</div>
		<div class="modal-body">
			<form asp-controller="Home" asp-action="CreateAccount" method="post">
				<div class="mb-3">
					<input type="text" class="form-control" name="Name" placeholder="Insert Name" />
					<label for="nameFromCreateAccount" class="form-label">Name</label>
				</div>
				<div class="mb-3">
					<input type="text" class="form-control" name="Password" placeholder="Insert Password" />
					<label for="passwordFromCreateAccount" class="form-label">Password</label>
				</div>
				<button class="btn btn-primary" type="submit">Create Account</button>
			</form>
		</div>
	</div>
</body>
</html>
